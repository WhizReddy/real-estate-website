# Real Estate Website Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
# Required: PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/real_estate_db"

# NextAuth Configuration (Optional - for authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# Email Configuration (Optional - for contact forms)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Storage (Optional - for image uploads)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# API Keys (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# App Configuration
NODE_ENV="development"
PORT="3000"

# Feature Flags
ENABLE_ANALYTICS="false"
ENABLE_PERFORMANCE_MONITORING="false"

# Security (Production)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Development Notes:
# - DATABASE_URL is required for the app to function
# - Other variables are optional but enable additional features
# - In production, make sure to set strong secrets and proper origins